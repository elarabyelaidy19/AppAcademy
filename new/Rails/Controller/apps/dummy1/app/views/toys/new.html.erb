<h1>Create A Toy for <%= @cat.name %></h1> 

<form action="/toys" method="POST"> 
    <input type="hidden" name="toy[cat_id]" value="<%= @cat.id%>" >

    <label for="toy_name">Name</label>
    <input type="text" name="toy[name]" id="toy_name" value="<%= @toy.name %>">
    <br>

    <label for="toy_type">TYype</label> 
    <select name="toy[toy_type]" id="toy_type"> 
      <% Toy::TYPES.each do |type| %> 
        <option value="<%=type%>" <%= "selected" if @toy.toy_type == type %>> 
            <%= type.upcase %> 
        </option>
      <%end%>
    </select>
    <br>
<%
=begin%>
     
    <label for="cat_id">Owner</label>
    <input type="text" name="toy[cat_id]" id="cat_id">  
<%
=end%>


    <input type="submit" value="Create Toy">
</form>